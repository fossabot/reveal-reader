<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/content_layout" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="0px" android:layout_weight="1.0">
		<LinearLayout android:id="@+id/about_container"
			android:layout_width="fill_parent" android:layout_height="0px"
			android:layout_weight="1.0" android:paddingLeft="5dip"
			android:paddingRight="5dip" android:orientation="vertical">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/license_text"
				android:layout_margin="5sp" />
		</LinearLayout>
	</ScrollView>
	<Button android:id="@+id/close_about_btn" android:text="@string/close"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:padding="5sp" />
</LinearLayout>