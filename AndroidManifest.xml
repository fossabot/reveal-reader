<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackcholt.reveal" 
    	android:versionName="1.0 Beta Build" android:versionCode="151">
    <!-- Required for positron to open it's server socket. -->
    <uses-permission android:name="android.permission.INTERNET"/>

	<!-- Required for positron to disable the keyguard, should it be on during tests. -->
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <instrumentation android:label="Positron"
        android:name="com.googlecode.autoandroid.positron.Positron"
        android:targetPackage="com.jackcholt.reveal">
        
</instrumentation>
     
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">

       <activity android:label="@string/app_name" android:name=".Main" android:screenOrientation="sensor" android:multiprocess="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Settings" android:label="@string/settings_name" android:screenOrientation="sensor"/>
        <activity android:name=".YbkViewActivity"  android:label="@string/reveal_ybk_view"/>
	    <provider android:multiprocess="true" android:authorities="com.jackcholt.reveal" android:name=".YbkProvider" android:screenOrientation="sensor"></provider>
		<activity android:name=".TitleBrowser" android:label="@string/title_browser_name"  android:screenOrientation="sensor"/>
		<provider android:name=".TitleProvider" android:multiprocess="true" android:authorities="com.jackcholt.reveal.titles"/>
		
        <activity android:multiprocess="true" android:name=".HistoryDialog" 
            android:label="@string/menu_history" 
	        android:screenOrientation="sensor"
	        android:theme="@android:style/Theme.Dialog"/>
    </application>


<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>

</manifest> 
