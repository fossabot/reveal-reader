<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackcholt.revel" 
    	android:versionName="1.0.39" android:versionCode="1039">
    <!-- Required for positron to open it's server socket. -->
    <uses-permission android:name="android.permission.INTERNET"/>

	<!-- Required for positron to disable the keyguard, should it be on during tests. -->
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <instrumentation android:label="Positron"
        android:name="com.googlecode.autoandroid.positron.Positron"
        android:targetPackage="com.jackcholt.revel">
        
</instrumentation>
     
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity android:label="@string/app_name" android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Settings" android:label="@string/settings_name"/>
        <activity android:name=".YbkViewActivity"  android:label="@string/revel_ybk_view"/>
	    <provider android:multiprocess="true" android:authorities="com.jackcholt.revel" android:name=".YbkProvider"></provider>
		<activity android:name=".TitleBrowser" android:label="@string/title_browser_name" />
		<provider android:name=".TitleProvider" android:multiprocess="true" android:authorities="com.jackcholt.revel.titles"/>
</application>

</manifest> 