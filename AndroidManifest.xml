<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.jackcholt.reveal" android:versionName="1.3"
	android:versionCode="571">
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:name="RevealApplication" android:debuggable="true">
		<activity android:name=".Main" android:screenOrientation="sensor"
			android:multiprocess="true" android:label="@string/app_name"
			android:clearTaskOnLaunch="true">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".Settings" android:label="@string/settings_name"
			android:screenOrientation="sensor" />
		<activity android:name=".YbkViewActivity" android:label="@string/reveal_ybk_view" />
		<provider android:multiprocess="true" android:authorities="com.jackcholt.reveal"
			android:name=".YbkProvider" android:screenOrientation="sensor"></provider>
		<activity android:label="@string/title_browser_name"
			android:screenOrientation="sensor" android:name="TitleBrowser" />

		<activity android:multiprocess="true" android:name=".HistoryDialog"
			android:label="@string/menu_history" android:screenOrientation="sensor"
			android:theme="@android:style/Theme.Dialog" />
		<activity android:multiprocess="true" android:name=".BookmarkDialog"
			android:label="@string/menu_bookmark" android:screenOrientation="sensor"
			android:theme="@android:style/Theme.Dialog" />

		<activity android:name=".ErrorDialog" android:label="@string/error_title"
			android:theme="@android:style/Theme.Dialog"
			android:screenOrientation="sensor" android:multiprocess="false" />
		<service android:name=".YbkService" android:exported="false" />

		<activity android:name=".YbkPopupActivity" android:label="@string/reveal_ybk_view"
			android:theme="@android:style/Theme.Dialog" />
	</application>

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

	<uses-sdk android:minSdkVersion="3" />

</manifest> 
